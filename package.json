{
  "name": "yeti-ecosystem",
  "private": true,
  "type": "module",
  "repository": "https://github.com/kiranojhanp/yeti.git",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\" && npx sort-package-json \"**/package.json\"",
    "lint": "turbo lint"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "shipjs": "^0.27.0",
    "turbo": "^2.3.3",
    "typescript": "5.5.4"
  },
  "packageManager": "bun@1.1.42",
  "engines": {
    "node": ">=18"
  }
}
