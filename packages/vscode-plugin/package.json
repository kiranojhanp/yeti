{
  "name": "yeti-vscode-plugin",
  "displayName": "Yeti Language",
  "version": "0.0.4",
  "publisher": "kiranojhanp",
  "description": "A lightweight and expressive database markup language",
  "categories": [
    "Programming Languages"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/kiranojhanp/yeti.git"
  },
  "main": "./dist/extension.js",
  "activationEvents": [
    "onLanguage:yeti"
  ],
  "scripts": {
    "vscode:prepublish": "npm run package",
    "build": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --sourcemap",
    "watch": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --sourcemap --watch",
    "package": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --minify",
    "typecheck": "tsc -p ./ --noEmit"
  },
  "contributes": {
    "commands": [
      {
        "command": "yeti.generateSql",
        "title": "Generate SQL"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "yeti.generateSql",
          "group": "navigation",
          "when": "resourceLangId == yeti"
        }
      ]
    },
    "grammars": [
      {
        "language": "yeti",
        "scopeName": "source.yeti",
        "path": "./syntaxes/yeti.tmLanguage.json"
      }
    ],
    "languages": [
      {
        "id": "yeti",
        "aliases": [
          "Yeti",
          "yeti"
        ],
        "extensions": [
          ".yeti"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./images/logo.webp",
          "dark": "./images/logo.webp"
        }
      }
    ]
  },
  "engines": {
    "vscode": "^1.96.0"
  },
  "icon": "images/logo.webp",
  "dependencies": {
    "@yeti/generator": "workspace:*",
    "@yeti/parse": "workspace:*",
    "@yeti/pg-generator": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.96.0",
    "esbuild": "^0.25.0",
    "typescript": "^5.5.4"
  },
  "vsce": {
    "dependencies": false
  }
}
